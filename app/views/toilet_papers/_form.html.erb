<%= simple_form_for(@toilet_paper) do |f| %>
  <%= f.input :color, collection: ["pink", "yellow", "black"], input_html: {data: {controller: "tom-select"}} %>
  <%= f.input :thickness, collection: ["single-ply", "2-ply", "3-ply", "4-ply"], input_html: {data: {controller: "tom-select"}} %>
  <%= f.input :scent, placeholder: "Caipirinha, violet, Chanel nÂ° 5"%>
  <%= f.input :length, collection: ["single roll", "double roll", "triple roll", "jumbo roll", "mega roll"], input_html: {data: {controller: "tom-select"}} %>
  <%= f.input :price, placeholder: "CHF/roll" %>
  <%= f.input :used, as: :radio_buttons %>
  <%= f.input :premium, as: :radio_buttons %>
  <%= f.submit %>
<% end %>