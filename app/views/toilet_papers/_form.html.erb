<div class="reservationSquare" id="reservationSquareMore">
<div class="button_retour" id="back_form_new">
  <%=link_to "Back", toilet_papers_path, class:"back" %>
</div>
<%= simple_form_for(@toilet_paper) do |f| %>
  <%= f.input :title, placeholder: "Roll of the future" %>
  <p>Color</p>
  <%= f.select :color, ["Black", "Gold", "Pink", "White", "Yellow"]%>
  <p>Thickness</p>
  <div class="thickness">
    <%= f.select :thickness, ["Simple", "X 2", "X 3", "X 4", "X 5"] %>
  </div>
  <%= f.input :scent, placeholder: "Caipirinha, violet, Chanel nÂ° 5"%>
  <%= f.input :price, placeholder: "CHF/roll" %>
  <%= f.input :used, as: :radio_buttons %>
  <%= f.input :description, placeholder: "Description..." %>
  <%= f.submit 'Post toilet paper' %>
<% end %>
</div>
