  <%= render "navbar_wagon" %>

    <div class="button_retour">
      <%=link_to "Back", toilet_papers_path, class:"back" %>
    </div>

    <h1> <%= @toilet_paper.title %> </h1>

    <div class="imagebox">

      <div class="image1">
      <%=image_tag("image1.jpg", height: '300')%>
      </div>

      <div class="image2">
        <%=image_tag("image2.jpg", height: '300')%>
      </div>

      <div class="image3">
        <%=image_tag("image3.jpg", height: '300') %>
      </div>

    </div>


    <div class="d-flex">

  <div class="description">

    <h2>Description of Product</h2>
    <p class="input-description" name="description" readonly><%= @toilet_paper.description %></p>

  </div>


  <div class="reservationSquare">

    <h3>Quantity</h3>
    <input class="input" type="number" name="quantity">

    <h3>Color</h3>
    <p class="input-color" name="color" readonly><%= @toilet_paper.color %></p>

    <h3>Thickness</h3>
    <p class="input-thickness" name="number" readonly><%= @toilet_paper.thickness %></p>

    <h3>Scent</h3>
    <p class="input-sent" name="sent" readonly><%= @toilet_paper.scent %></p>

    <h3>Price</h3>
    <p class="input-price" name="number" readonly><%= @toilet_paper.price %> CHF</p>

      <div class="button_order">
      <%=link_to "Order", class:"order" %>
    </div>
  </div>
</div>



<%= render "footer" %>
