                <%= paper.title %>
                <%= image_tag("toilet_paper.jpg", height: '180')%>
                <%= "Price : CHF" %>
                <%= paper.price %>
                <%= link_to "Show this toilet paper", toilet_paper_path(paper) %>
              </div>
              <br/>
            <% end %>
          </div>
        <% else %>
          <em>Sorry, no toilet papers found.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>

