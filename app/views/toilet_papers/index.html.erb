
<%= render "navbar_wagon" %>

<%= link_to "Back", root_path, class: "btn btn-flat" %>

<div class="bar_recherche">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<%#MANQUE LA BARRE DES FILTRES %>

<div class="container">
  <div class="row">
    <div class="boxs">
      <% @toilet_papers.each do |paper| %>
        <div class="box" id="card-trip">
          <div class="card-img">
            <%= image_tag("toilet_paper.jpg", height: "200", width: "100%")%>
          </div>
          <div class="card-trip-infos">
            <h4>
              <%= paper.title %>
            </h4>
          </div>
          <h2>
            <%= paper.price %>
          </h2>
          <%= link_to "Show this toilet paper", toilet_paper_path(paper) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "footer" %>
